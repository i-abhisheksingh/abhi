@model IEnumerable<TravaliaMvc.Models.PackageTable>

@{
    ViewBag.Title = "EditPackage";
    Layout = "~/Views/Shared/_AdminMaster.cshtml";
}


<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Admin Dashboard</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li class="active">admin</li>
                    <li class="active">Edit Packages</li>

                </ol>
            </div>
        </div>
    </div>
</div>
<br />
<br />
<div class="card border-danger">
    <div class="card-header bg-danger">
        <h3 class="text-white"><i class="fa fa-edit"></i>&nbsp;Edit Product Details</h3>
    </div>
    <div class="card-body border-danger">
        <table class="table table-hover table-bordered table-striped">
            <tr class="bg-dark text-white">
                <th>
                    @Html.DisplayNameFor(model => model.PackageName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pic)
                </th>
                <th>Action</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PackageName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td>
                        <img src="@item.Pic" class="img-thumbnail img-fluid" height="100" width="100" />
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id}, new { @class = "btn btn-success" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>


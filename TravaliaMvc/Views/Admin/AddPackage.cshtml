
@{
    ViewBag.Title = "AddPackage";
    Layout = "~/Views/Shared/_AdminMaster.cshtml";
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Admin Dashboard</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li class="active">Admin</li>
                    <li class="active">AddPackage</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<br />
<br />

<div class="card border-danger">
    <div class="card-header bg-danger">
        <h3 class="text-white"><i class="fa fa-plus"></i> &nbsp; New Product Details</h3>
    </div>
    <form action="/Admin/AddPackage" method="post" enctype="multipart/form-data">
        <div class="card-body">
            <div class="form-group">
                <label>Package Name</label>
                <input id="Text1" name="PName" type="text" class="form-control" />
            </div>
            <div class="form-group">
                <label>Price</label>
                <input id="Text1" name="Price" type="text" class="form-control" />
            </div>
            <div class="form-group">
                <label>Category</label>
                <select id="Select1" name="Cat" class="form-control">
                    <option selected disabled>...Select Category....</option>
                    <option>Holyday Package</option>
                    <option>5 Days Package</option>
                    <option>3 Days Package</option>

                </select>
            </div>
            <div class="form-group">
                <label>Pic</label>
                <input id="Text1" name="Pic" type="File" class="form-control" />
            </div>
            <input id="Submit1" type="submit" value="Add Package" class="btn btn-outline-danger" />
        </div>
    </form>
</div>

